<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="#212121"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@+id/gridLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.40">

                        <TextView
                            android:id="@+id/txtMemoria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txtNumeroMemoria"
                            android:layout_alignStart="@+id/txtNumeroMemoria"
                            android:text="Memoria:  "
                            android:textColor="#FAFAFA" />

                        <TextView
                            android:id="@+id/txtNumeroMemoria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txtPantalla"
                            android:layout_alignStart="@+id/gridLayout"
                            android:textColor="#FAFAFA" />

                        <TextView
                            android:id="@+id/txtOperadorMemoria"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txtPantalla"
                            android:layout_alignStart="@+id/gridLayout"
                            android:layout_alignTop="@+id/txtNumeroMemoria"
                            android:layout_toEndOf="@+id/txtNumeroMemoria"
                            android:textColor="#FAFAFA" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="0.40">

                        <TextView
                            android:id="@+id/txtOper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OperaciÃ³n:    "
                            android:textColor="#FAFAFA" />

                        <TextView
                            android:id="@+id/txtOperacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/txtNumeroMemoria"
                            android:layout_alignStart="@+id/txtNumeroMemoria"
                            android:textColor="#FAFAFA" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtPantalla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/gridLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="14dp"
                    android:layout_weight="0.10"
                    android:height="100dp"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="#F5F5F5"
                    android:textSize="35dp" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="5"
            android:orientation="horizontal"
            android:padding="0dp"
            android:rowCount="9"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

                <Button
                    android:id="@+id/btnDivision"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="4"
                    android:layout_margin="2dp"
                    android:layout_row="5"
                    android:background="#FF5722"
                    android:text="/"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnModulo"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="4"
                    android:layout_margin="2dp"
                    android:layout_row="4"
                    android:background="#FF5722"
                    android:text="MOD"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnMMenos"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="3"
                    android:layout_margin="2dp"
                    android:layout_row="4"
                    android:background="#FF5722"
                    android:text="M-"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnPunto"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="2"
                    android:layout_margin="2dp"
                    android:layout_row="8"
                    android:background="#424242"
                    android:text="."
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnCero"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:layout_row="8"
                    android:background="#424242"
                    android:text="0"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnResta"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="4"
                    android:layout_margin="2dp"
                    android:layout_row="7"
                    android:background="#FF5722"
                    android:text="-"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnSuma"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="4"
                    android:layout_margin="2dp"
                    android:layout_row="8"
                    android:background="#FF5722"
                    android:text="+"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnIgual"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="3"
                    android:layout_margin="2dp"
                    android:layout_row="8"
                    android:background="#FF5722"
                    android:text="="
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnOcho"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="2"
                    android:layout_margin="2dp"
                    android:layout_row="5"
                    android:background="#424242"
                    android:text="8"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnDos"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="2"
                    android:layout_margin="2dp"
                    android:layout_row="7"
                    android:background="#424242"
                    android:text="2"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnCuatro"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:layout_row="6"
                    android:background="#424242"
                    android:text="4"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnTres"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="3"
                    android:layout_margin="2dp"
                    android:layout_row="7"
                    android:background="#424242"
                    android:text="3"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnUno"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:layout_row="7"
                    android:background="#424242"
                    android:text="1"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnSeis"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="3"
                    android:layout_margin="2dp"
                    android:layout_row="6"
                    android:background="#424242"
                    android:text="6"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnCinco"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="2"
                    android:layout_margin="2dp"
                    android:layout_row="6"
                    android:background="#424242"
                    android:text="5"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnNueve"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="3"
                    android:layout_margin="2dp"
                    android:layout_row="5"
                    android:background="#424242"
                    android:text="9"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnSiete"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:layout_row="5"
                    android:background="#424242"
                    android:text="7"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnMultiplicacion"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="4"
                    android:layout_margin="2dp"
                    android:layout_row="6"
                    android:background="#FF5722"
                    android:text="X"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnMPlus"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="2"
                    android:layout_margin="2dp"
                    android:layout_row="4"
                    android:background="#FF5722"
                    android:text="M+"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnMR"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="1"
                    android:layout_margin="2dp"
                    android:layout_row="4"
                    android:background="#FF5722"
                    android:text="MR"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnAC"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:layout_row="8"
                    android:background="#FF5722"
                    android:text="AC"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnFactorial"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:layout_row="7"
                    android:background="#FF5722"
                    android:text="n!"
                    android:textAllCaps="false"
                    android:textColor="#FAFAFA" />

                <Button
                    android:id="@+id/btnExponente"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_column="0"
                    android:layout_margin="2dp"
                    android:layout_row="6"
                    android:background="#FF5722"
                    android:text="xÂª"
                    android:textAllCaps="false"
                    android:textColor="#FAFAFA" />
        </GridLayout>

</RelativeLayout>